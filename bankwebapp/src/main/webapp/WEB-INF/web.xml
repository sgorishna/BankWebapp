<?xml version="1.0" encoding="iso-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_5.xsd"
    version="2.5">


  <display-name>Archetype Created Web Application</display-name>
 
 <servlet>
    
    
    <servlet-name>CustomerController</servlet-name>
    
    <servlet-class>com.webapp.controller.customer.CustomerController</servlet-class>
    
  </servlet>
  
  <servlet>
    
    
    <servlet-name>AddCustomerController</servlet-name>
    
    <servlet-class>com.webapp.controller.customer.AddCustomerController</servlet-class>
    
  </servlet>
  
  <servlet>
    
    
    <servlet-name>DeleteCustomerController</servlet-name>
    
    <servlet-class>com.webapp.controller.customer.DeleteCustomerController</servlet-class>
    
  </servlet>
  
  <servlet>
    
    
    <servlet-name>UpdateCustomerController</servlet-name>
    
    <servlet-class>com.webapp.controller.customer.UpdateCustomerController</servlet-class>
    
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerController</servlet-name>
    <url-pattern>/customers.php</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AddCustomerController</servlet-name>
    <url-pattern>/new_customer.php</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>DeleteCustomerController</servlet-name>
    <url-pattern>/delete_customer.php</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UpdateCustomerController</servlet-name>
    <url-pattern>/update_customer.php</url-pattern>
  </servlet-mapping>
  
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
 
  
</web-app>
